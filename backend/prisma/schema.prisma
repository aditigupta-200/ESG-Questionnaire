generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  responses Response[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Response {
  id                               Int      @id @default(autoincrement())
  userId                           Int
  financialYear                    String
  // Inputs
  totalElectricityConsumption      Float?   // kWh
  renewableElectricityConsumption  Float?   // kWh
  totalFuelConsumption             Float?   // liters
  carbonEmissions                  Float?   // T CO2e
  totalEmployees                   Int?
  femaleEmployees                  Int?
  averageTrainingHoursPerEmployee  Float?
  communityInvestmentSpend         Float?   // INR
  percentIndependentBoardMembers   Float?   // %
  dataPrivacyPolicy                Boolean?
  totalRevenue                     Float?   // INR
  // Computed
  carbonIntensity                  Float?   // T CO2e / INR
  renewableElectricityRatio        Float?   // %
  diversityRatio                   Float?   // %
  communitySpendRatio              Float?   // %

  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, financialYear])
}
